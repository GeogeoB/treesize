<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Login</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel='stylesheet' type='text/css' media='screen' href='style/style_log.css'>
</head>
<body>

<div class="container">
  <p class="login">Login</p>
  <div class="form">
    <form method="post">
      <div class="input">
        <label for="username">Username</label>
        <input autocomplete="off" type="text" id="username" name="username" placeholder="🙍‍♂️ Type your Username">
      </div>
      <div class="input">
        <label for="password">Password</label>
        <input autocomplete="off" type="password" id="password" name="password" placeholder="🔑 Type your Password">
        <div class="forgot_password">
          <a href="#">Forgot password ?</a>
        </div>
      </div>
      <input type="submit" value="LOGIN" name="submit_form" id="submit_form">
      <p class="erreur"><%= erreur %></p>
    </form>
  </div>
  <div class="sign_up">
    <p id="On_sign">Or Sign Up Using</p>
    <a href="/SignUp" id="SIGN_UP">SIGN UP</a>
  </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script>
      var socket = io();

      var messages = document.getElementById('messages');
      var form = document.getElementById('form');
      var input = document.getElementById('input');

      form.addEventListener('submit', function(e) {
        e.preventDefault();
        if (input.value) {
          socket.emit('pseudo', input.value);
          input.value = '';

          document.location.reload();
        }
      });
</script>
</body>
</html>